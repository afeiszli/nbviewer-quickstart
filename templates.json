{
    "kind": "List",
    "apiVersion": "v1",
    "items": [
        {
            "kind": "Template",
            "apiVersion": "v1",
            "metadata": {
                "name": "nbviewer-builder",
                "annotations": {
                    "openshift.io/display-name": "Notebook Viewer Builder",
                    "description": "Template for creating customised Notebook Viewer images.",
                    "iconClass": "icon-python",
                    "tags": "python,jupyter,nbviewer"
                }
            },
            "parameters": [
                {
                    "name": "IMAGE_NAME",
                    "value": "custom-nbviewer",
                    "required": true
                },
                {
                    "name": "BUILDER_IMAGE",
                    "value": "nbviewer:latest",
                    "required": true
                },
                {
                    "name": "GIT_REPOSITORY_URL",
                    "value": "",
                    "required": true
                },
                {
                    "name": "GIT_REFERENCE",
                    "value": "master",
                    "required": true
                },
                {
                    "name": "CONTEXT_DIR",
                    "value": "",
                    "required": false
                }
            ],
            "objects": [
                {
                    "kind": "ImageStream",
                    "apiVersion": "v1",
                    "metadata": {
                        "name": "${IMAGE_NAME}",
                        "labels": {
                            "build": "${IMAGE_NAME}"
                        }
                    },
                    "spec": {
                        "lookupPolicy": {
                            "local": true
                        }
                    }
                },
                {
                    "kind": "BuildConfig",
                    "apiVersion": "v1",
                    "metadata": {
                        "name": "${IMAGE_NAME}",
                        "labels": {
                            "build": "${IMAGE_NAME}"
                        }
                    },
                    "spec": {
                        "triggers": [
                            {
                                "type": "ConfigChange"
                            },
                            {
                                "type": "ImageChange"
                            }
                        ],
                        "source": {
                            "type": "Git",
                            "git": {
                                "uri": "${GIT_REPOSITORY_URL}",
                                "ref": "${GIT_REFERENCE}"
                            },
                            "contextDir": "${CONTEXT_DIR}"
                        },
                        "strategy": {
                            "type": "Source",
                            "sourceStrategy": {
                                "from": {
                                    "kind": "ImageStreamTag",
                                    "name": "${BUILDER_IMAGE}"
                                }
                            }
                        },
                        "output": {
                            "to": {
                                "kind": "ImageStreamTag",
                                "name": "${IMAGE_NAME}:latest"
                            }
                        }
                    }
                }
            ]
        },
        {
            "kind": "Template",
            "apiVersion": "v1",
            "metadata": {
                "name": "nbviewer-deployer",
                "annotations": {
                    "openshift.io/display-name": "Notebook Viewer",
                    "description": "Template for deploying a Notebook Viewer instance.",
                    "iconClass": "icon-python",
                    "tags": "python,jupyter,nbviewer"
                }
            },
            "parameters": [
                {
                    "name": "APPLICATION_NAME",
                    "value": "nbviewer",
                    "required": true
                },
                {
                    "name": "IMAGE_NAME",
                    "value": "nbviewer:latest",
                    "required": true
                }
            ],
            "objects": [
                {
                    "kind": "DeploymentConfig",
                    "apiVersion": "v1",
                    "metadata": {
                        "name": "${APPLICATION_NAME}",
                        "labels": {
                            "app": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "strategy": {
                            "type": "Recreate"
                        },
                        "triggers": [
                            {
                                "type": "ConfigChange"
                            },
                            {
                                "type": "ImageChange",
                                "imageChangeParams": {
                                    "automatic": true,
                                    "containerNames": [
                                        "nbviewer"
                                    ],
                                    "from": {
                                        "kind": "ImageStreamTag",
                                        "name": "${IMAGE_NAME}"
                                    }
                                }
                            }
                        ],
                        "replicas": 1,
                        "selector": {
                            "app": "${APPLICATION_NAME}",
                            "deploymentconfig": "${APPLICATION_NAME}"
                        },
                        "template": {
                            "metadata": {
				"annotations": {
				    "alpha.image.policy.openshift.io/resolve-names": "*"
                                },
                                "labels": {
                                    "app": "${APPLICATION_NAME}",
                                    "deploymentconfig": "${APPLICATION_NAME}"
                                }
                            },
                            "spec": {
                                "containers": [
                                    {
                                        "name": "nbviewer",
                                        "image": "${IMAGE_NAME}",
                                        "ports": [
                                            {
                                                "containerPort": 8080,
                                                "protocol": "TCP"
                                            }
                                        ]
                                    }
                                ]
                            }
                        }
                    }
                },
                {
                    "kind": "Service",
                    "apiVersion": "v1",
                    "metadata": {
                        "name": "${APPLICATION_NAME}",
                        "labels": {
                            "app": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "ports": [
                            {
                                "name": "8080-tcp",
                                "protocol": "TCP",
                                "port": 8080,
                                "targetPort": 8080
                            }
                        ],
                        "selector": {
                            "app": "${APPLICATION_NAME}",
                            "deploymentconfig": "${APPLICATION_NAME}"
                        }
                    }
                },
                {
                    "kind": "Route",
                    "apiVersion": "v1",
                    "metadata": {
                        "name": "${APPLICATION_NAME}",
                        "labels": {
                            "app": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "host": "",
                        "to": {
                            "kind": "Service",
                            "name": "${APPLICATION_NAME}",
                            "weight": 100
                        },
                        "port": {
                            "targetPort": "8080-tcp"
                        },
                        "tls": {
                            "termination": "edge",
                            "insecureEdgeTerminationPolicy": "Redirect"
                        }
                    }
                }
            ]
        },
